@using CarRentalsBlazorEcho.Models
@using CarRentalsBlazorEcho.Data

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CarRentalsBlazorEcho</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="text-center">
            <img src="/Images/FribergLogo.png" height="200px" />
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (CurrentUser.IsLoggedIn == true && CurrentUser.IsAdmin == true)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Users">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Users
                </NavLink>
            </div>
        }
        @if (CurrentUser.IsLoggedIn == true && CurrentUser.IsAdmin == false)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Users">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Account
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Cars">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cars
            </NavLink>
        </div>
        @if (CurrentUser.IsAdmin == true)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Orders">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Orders
                </NavLink>
            </div>
        }
        @if (CurrentUser.IsLoggedIn == true && CurrentUser.IsAdmin != true)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Orders">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Orders
                </NavLink>
            </div>
        }

        @if (CurrentUser.IsAdmin == true)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Categories">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Categories
                </NavLink>
            </div>
        }

    </nav>
</div>